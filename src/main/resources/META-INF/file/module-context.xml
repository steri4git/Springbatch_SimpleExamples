<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="
	http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<description>Example job to get you started. It provides a skeleton for a typical batch application.</description>
 	
	<batch:job id="job1">

		<batch:step id="step1">
	    	<batch:tasklet transaction-manager="transactionManager">
	    	 	<batch:chunk reader="myFileItemReader1" processor="processor2"  writer="myFileItemWriter1" commit-interval="10" />
        	</batch:tasklet>
        </batch:step>
        
       <batch:listeners>
        	<batch:listener ref="listener1"/>
        </batch:listeners>
	</batch:job> 
	
	<bean id="myFileItemReader1" class="org.springframework.batch.item.file.FlatFileItemReader">
		<property name="resource" value="classpath:InputFile.txt" />
		<!-- property name="linesToSkip" value="1" / -->
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="lineTokenizer">
					<bean
						class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names" 
							value="eins, zwei, drei" />
					</bean>
				</property>
				<property name="fieldSetMapper" ref="MyFieldSetMapper1" />
			</bean>
			</property>
	</bean>
	<bean id="MyFieldSetMapper1" class="de.steri.springbatch.file.MyFieldSetMapper"></bean>
	
	<bean id="myFileItemWriter1" class="org.springframework.batch.item.file.FlatFileItemWriter">
		<property name="resource" value="classpath:OutputFile.txt" />
		 <property name="lineAggregator">
        	<bean class="org.springframework.batch.item.file.transform.PassThroughLineAggregator">
        	</bean>
    	</property>
	</bean>
</beans>
