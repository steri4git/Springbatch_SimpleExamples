<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="
	http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<description>Example job to get you started. It provides a skeleton for
		a typical batch application.</description>

	<batch:job id="Job1">
		<batch:step id="step1">
			<batch:tasklet transaction-manager="transactionManager"
				start-limit="100">
				<batch:chunk reader="personJdbcCursorItemReader" writer="writer1" commit-interval="2" />
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="personJdbcCursorItemReader"
		class="org.springframework.batch.item.database.JdbcCursorItemReader">
		<property name="dataSource" ref="dataSource" />
		<property name="sql"
			value="select * from PERSON" />
		<property name="rowMapper" ref="personRowMapper" />
	</bean>
	<bean id="personRowMapper" class="de.steri.springbatch.jdbc.processing.PersonRowMapper"/>
	
</beans>
